<%- include('../partials/header'); -%>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add New Comment to <%=obj.name%></h1>
		<div style="width: 30%; margin:25px auto;">
			<form action="/campgrounds/<%=obj._id%>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="coMMent[text]" placeholder="enter comment">	
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text" name="coMMent[rating]" placeholder="rate out of 5">
				</div> <div class="form-group"> -->
                    <label for="rating">Leave a rating:</label>
                    <fieldset class="starability-basic form-group" id="rating">
                    <div>
                    <input type="radio" id="first-rate5" name="coMMent[rating]" value="5" checked />
                    <label for="first-rate5" title="5 stars - Amazing">
                        <%- '<span id="df" class="fa fa-star checked"></span>'.repeat(5) %>
                    </label>
					
                    </div>
                    <div>
                    <input type="radio" id="first-rate4" name="coMMent[rating]" value="4" />
                    <label for="first-rate4" title="4 stars - Very good">
                        <%- '<span id="df" class="fa fa-star checked"></span>'.repeat(4) %>
                    </label>
						
                    </div>
                    <div>
                    <input type="radio" id="first-rate3" name="coMMent[rating]" value="3" />
                    <label for="first-rate3" title="3 stars - Average">
                        <%- '<span id="df" class="fa fa-star checked"></span>'.repeat(3) %>
                    </label>
					
                    </div>
                    <div>
                    <input type="radio" id="first-rate2" name="coMMent[rating]" value="2" />
                    <label for="first-rate2" title="2 stars - Not good">
                        <%- '<span id="df" class="fa fa-star checked"></span>'.repeat(2) %>
                    </label>
						
                    </div>
                    <div>
                    <input type="radio" id="first-rate1" name="coMMent[rating]" value="1" />
                    <label for="first-rate1" title="1 star - Terrible">
                        <%- '<span id="df" class="fa fa-star checked"></span>'.repeat(1) %>
                    </label>
						
                </div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>	
			</form>
			<a href="/">Go Back</a>
		</div>
		
	</div>
</div>
	
<%- include('../partials/footer'); -%>