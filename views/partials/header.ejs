<!DOCTYPE html>
<html>
<head>
	<title></title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.1/css/all.css">
	<link rel="stylesheet" href="/stylesheets/main.css">
	<link rel="stylesheet" href="/stylesheets/landingShow.css">


</head>
<body>
	<!-- NAV BAR Start -->
	<nav id="landing-header-index" class="navbar navbar-default">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="/">
					<i class="fa fa-binoculars" aria-hidden="true"></i> YelpCamp</a>
		
    			<ul class="nav navbar-nav">
						<li><a href="/">Home</a></li>
						<li><a href="/campgrounds">Campgrounds</a></li>
				</ul>
		
			</div>
			
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav navbar-right">
					<%if(!currentUser){%>           <!-- if User is not lagged in then currentUser is 0/undefined -->
						<li><a href="/login">Login</a></li>
						<li><a href="/register">Sign Up</a></li>
					<%}else{%>
						<li><a href="#">Hi, <em><%=currentUser.username%></em> !</a></li>
						<li><a href="/logout">Log out</a></li>
					<%}%>
				</ul>
			</div>
		</div>
	</nav>
	<!-- NAV BAR End -->
	<div class="container">
		<%if(error && error.length>0){%>
		<div class="alert alert-danger" role="alert">
			<%= error%>
		</div>	
		<%}if(success && success.length>0){%>
		<div class="alert alert-success" role="alert">
			<%= success%>
		</div>
		<%}%>
	</div>


	
	
	
	

