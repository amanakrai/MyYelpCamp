<%- include('../partials/header'); -%>
<div class="container">
	<div class="row">
		<h1 style="text-align: center">Edit <%=camp.name%></h1>
		<div style="width: 30%; margin:25px auto;">
			<form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="newcamp[name]" value="<%= camp.name%>">	
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newcamp[location]" value="<%= camp.location%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="newcamp[prize]" value="<%= camp.prize%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newcamp[image]" value="<%= camp.image%>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="newcamp[discription]" value="<%= camp.discription%>">	
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>	
			</form>
			<a href="/">Go Back</a>
		</div>
		
	</div>
</div>
	
<%- include('../partials/footer'); -%>